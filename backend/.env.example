# Database connection (required in production)
DATABASE_URL=postgresql://vipu:vipu@localhost:5432/vipu

# Flask environment (development, production, testing)
FLASK_ENV=development

# Secret key for Flask sessions (required in production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# CORS allowed origins (comma-separated, e.g., "http://localhost:3000,https://app.example.com")
CORS_ORIGINS=http://localhost:3000
